<Page
    x:Class="SimonGame_UI.MainPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:SimonGame_UI"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d"
    Background="MediumSlateBlue">
    <!--Background="{ThemeResource ApplicationPageBackgroundThemeBrush}">-->

    <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center" Width="500">
        <TextBlock Name="txtTitle" Text="Simon Says" Margin="0,0,0,130" FontSize="50" HorizontalTextAlignment="Center" Foreground="DarkBlue" FontWeight="Bold" HorizontalAlignment="Center"></TextBlock>
        <Button Name="btnPlay" Margin="0,0,0,130" Height="70" Width="200" FontSize="35" Background="Orchid" CornerRadius="10" Content="Play" Foreground="DarkBlue" FontWeight="Bold" HorizontalAlignment="Center"></Button>
        <Button Name="btnRanking" Background="Orchid" Height="70" Width="200" FontSize="35" CornerRadius="10" Content="Ranking" Foreground="DarkBlue" FontWeight="Bold" HorizontalAlignment="Center" Click="BtnRanking_Click"></Button>
    </StackPanel>
</Page>
