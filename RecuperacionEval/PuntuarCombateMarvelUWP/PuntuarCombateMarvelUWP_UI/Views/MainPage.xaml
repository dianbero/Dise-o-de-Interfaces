<Page
    x:Class="PuntuarCombateMarvelUWP_UI.MainPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:PuntuarCombateMarvelUWP_UI"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d"
    Background="Black">

   

    <NavigationView IsBackButtonVisible="Collapsed"
                    IsSettingsVisible="False"
                    ItemInvoked="NavigationView_ItemInvoked"
                    Background="Black"
                    >
        <NavigationView.MenuItems>
            <NavigationViewItem Content="Puntuar Combate"
                                Icon="LikeDislike"
                                Tag="puntuarCombate"
                                Foreground="CornflowerBlue"
                                />
            <NavigationViewItem Content="Clasificación"
                                Icon="Favorite"
                                Tag="clasificacion"
                                Foreground="CornflowerBlue"/>
        </NavigationView.MenuItems>

        <ScrollViewer>
            <Frame Name="contentFrame"
                   Margin="0,40,0,40">
                <Image Source="ms-appx:///Assets/civilwar.jpg"/>
            </Frame>
        </ScrollViewer>

        
    </NavigationView>
    
</Page>
